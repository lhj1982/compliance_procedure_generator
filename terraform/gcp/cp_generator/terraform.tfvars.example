# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Application Configuration
app_name    = "compliance-procedure"
environment = "dev"

# LLM Configuration
llm_base_url = "https://api.openai.com/v1"

# Infrastructure Resource Identifiers (from infrastructure module outputs)
# Run `cd ../infrastructure && terraform output` to get these values

vpc_connector_name = "compliance-procedure-vpc-connector"
sql_instance_name  = "compliance-procedure-db-dev"
database_name      = "compliance_admin"
storage_bucket_name = "your-project-id-compliance-procedure-documents-dev"
secret_manager_secret_id = "compliance-procedure-gen-secrets-dev"

# Artifact Registry names (just the repository name, not the full path)
gen_backend_registry_name  = "compliance-procedure-gen-backend"
gen_frontend_registry_name = "compliance-procedure-gen-frontend"

# Service Account (just the account ID part, not the full email)
service_account_email = "compliance-procedure-cloud-run-sa"

# vpc_network_id = "projects/virtex-test-462007/global/networks/cp-network"  # Replace with your VPC network ID
vpc_id            = "projects/virtex-test-462007/global/networks/cp-vpc"
private_subnet_id = "cp-private-subnet"
