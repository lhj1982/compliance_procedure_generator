# This file is not used when deploying via root module
# Use ../terraform.tfvars instead

# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Application Configuration
app_name    = "compliance-procedure"
environment = "dev"

# VPC Configuration (from infrastructure module outputs)
vpc_connector_id   = "projects/PROJECT_ID/locations/REGION/connectors/NAME"
vpc_name           = "compliance-procedure-vpc-dev"
public_subnet_name = "compliance-procedure-public-subnet-dev"

# Database Configuration (from infrastructure module outputs)
db_connection_name = "PROJECT_ID:REGION:INSTANCE_NAME"
db_name            = "compliance_db"
db_user            = "compliance_user"
db_password        = "your-secure-database-password"
db_private_ip      = "10.0.0.0"

# Docker Images
frontend_image = "gcr.io/PROJECT_ID/compliance-frontend:latest"
backend_image  = "gcr.io/PROJECT_ID/compliance-backend:latest"
admin_image    = "gcr.io/PROJECT_ID/compliance-admin:latest"

# LLM API Key
llm_api_key = "your-llm-api-key"
