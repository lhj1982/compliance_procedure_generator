# LLM Configuration
LLM_API_KEY=your-openai-api-key
LLM_BASE_URL=https://api.openai.com/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=compliance_admin
DB_USER=postgres
DB_PASSWORD=password

# Storage Configuration
# Set to 'true' for GCS, 'false' for local storage
USE_GCS=false
# Set to 'true' for S3, 'false' for local storage
USE_S3=false

# GCP Configuration (only needed if USE_GCS=true)
GCS_BUCKET_NAME=your-gcs-bucket-name

# AWS Configuration (only needed if USE_S3=true)
S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Local Storage Configuration (only needed if USE_GCS=false and USE_S3=false)
ADMIN_DOCS_PATH=/app/admin_generated_docs